{
    "id": "whisker-main",
    "version": "0.1.0",
    "description": "A Testing Utility for Scratch 3.0",
    "author": "Marvin Kreis",
    "license": "GPL-3.0-only",
    "homepage": "https://github.com/se2p/whisker-main",
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/se2p/whisker-main"
    },
    "main": "./src/index.js",
    "scripts": {
        "build": "webpack --progress --colors --bail",
        "build:prod": "NODE_ENV=production webpack --progress --colors --bail",
        "test": "npm run build && jest --forceExit --coverage --verbose",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-test": "npm run test -- --watchAll",
        "test:coverage": "npm test -- --coverage",
        "build-ts": "tsc --incremental",
        "watch-ts": "tsc -w",
        "docs": "jsdoc -c .jsdoc.json",
        "lint": "eslint . && format-message lint src/**/*.{ts,js}",
        "lint:fix": "eslint . --fix"
    },
    "dependencies": {
        "clean-yaml-object": "^0.1.0",
        "js-yaml": "^3.14.0",
        "lodash.defaults": "^4.2.0",
        "minilog": "^3.1.0",
        "scratch-analysis": "git+https://gitlab+deploy-token-4:9w54rf8RZ9x2hDsK9VHC@gitlab.infosun.fim.uni-passau.de/se2/whisker/scratch-analysis.git",
        "scratch-vm": "git+https://gitlab+deploy-token-3:i8XTz2vnGPewCoYALnoy@gitlab.infosun.fim.uni-passau.de/se2/whisker/scratch-vm.git",
        "seed-random": "^2.2.0",
        "source-map-loader": "^0.2.4"
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "@types/jest": "^25.2.3",
        "@types/node": "^14.0.5",
        "@typescript-eslint/eslint-plugin": "^3.0.0",
        "@typescript-eslint/parser": "^3.0.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^26.0.1",
        "babel-loader": "^8.1.0",
        "babel-preset-minify": "^0.5.1",
        "eslint": "^7.0.0",
        "expose-loader": "^0.7.5",
        "ink-docstrap": "^1.3.2",
        "jest": "^26.0.1",
        "jsdoc": "^3.6.4",
        "tap": "^14.10.7",
        "ts-jest": "^26.0.0",
        "ts-loader": "^7.0.4",
        "ts-node": "^8.10.1",
        "typescript": "^3.9.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    }
}
