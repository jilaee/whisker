{
    "name": "whisker-gui",
    "version": "0.1.0",
    "description": "A web GUI for Whisker - A Testing Framework for Scratch 3.0",
    "author": "Marvin Kreis",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/marvinkreis/whisker-gui",
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/marvinkreis/whisker-gui"
    },
    "browser": "./dist/index.html",
    "scripts": {
        "build": "webpack --progress --colors --bail",
        "build:prod": "NODE_ENV=production webpack --progress --colors --bail",
        "coverage": "tap ./test/{unit,integration}/*.js --coverage --coverage-report=lcov",
        "docs": "jsdoc -c .jsdoc.json",
        "lint": "eslint . && format-message lint src/**/*.js",
        "lint:fix": "eslint . --fix",
        "package": "pkg --target node10-win-x64,node10-linux-x64,node10-macos-x64 .",
        "tap": "tap ./test/{unit,integration}/*.js",
        "tap:unit": "tap ./test/unit/*.js",
        "tap:integration": "tap ./test/integration/*.js"
    },
    "dependencies": {
        "codemirror": "^5.40.2",
        "bootstrap": "^4.1.3",
        "jquery": "^3.3.1",
        "datatables.net": "^1.10.19",
        "datatables.net-bs4": "^1.10.19",
        "@fortawesome/fontawesome-free": "^5.3.1"
    },
    "devDependencies": {
        "@babel/core": "^7.1.0",
        "@babel/preset-env": "^7.1.0",
        "babel-eslint": "^9.0.0",
        "babel-loader": "^8.0.2",
        "copy-webpack-plugin": "^4.5.2",
        "css-loader": "^1.0.0",
        "eslint": "^5.6.0",
        "eslint-config-scratch": "^5.0.0",
        "imports-loader": "^0.8.0",
        "mini-css-extract-plugin": "^0.4.3",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "uglifyjs-webpack-plugin": "^2.0.1",
        "webpack": "^4.19.1",
        "webpack-cli": "^3.1.1"
    }
}
