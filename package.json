{
    "id": "whisker-main",
    "version": "0.1.0",
    "description": "A Testing Utility for Scratch 3.0",
    "author": "Marvin Kreis",
    "license": "GPL-3.0-only",
    "homepage": "https://github.com/se2p/whisker-main",
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/se2p/whisker-main"
    },
    "main": "./src/index.js",
    "scripts": {
        "build": "webpack --progress --colors --bail",
        "build:prod": "NODE_ENV=production webpack --progress --colors --bail",
        "test": "npm run build && jest --forceExit --coverage --verbose",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-test": "npm run test -- --watchAll",
        "test:coverage": "npm test -- --coverage",
        "build-ts": "tsc --incremental",
        "watch-ts": "tsc -w",
        "docs": "jsdoc -c .jsdoc.json",
        "lint": "eslint . && format-message lint src/**/*.{ts,js}",
        "lint:fix": "eslint . --fix"
    },
    "dependencies": {
        "ts-loader": "^7.0.0",
        "clean-yaml-object": "^0.1.0",
        "js-yaml": "^3.12.0",
        "lodash.defaults": "^4.2.0",
        "minilog": "^3.1.0",
        "scratch-vm": "file:../scratch-vm",
        "seed-random": "^2.2.0",
        "source-map-loader": "^0.2.4"
    },
    "devDependencies": {
        "@types/jest": "^25.1.4",
        "@types/node": "^13.9.3",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "@babel/core": "^7.1.0",
        "@babel/preset-env": "^7.1.0",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.2",
        "babel-preset-minify": "^0.5.0",
        "eslint": "^5.6.0",
        "expose-loader": "^0.7.5",
        "jest": "^25.1.0",
        "jsdoc": "^3.5.5",
        "ink-docstrap": "^1.3.2",
        "tap": "^12.0.1",
        "webpack": "^4.19.1",
        "webpack-cli": "^3.1.1",
        "ts-jest": "^25.2.1",
        "ts-node": "^8.8.1",
        "typescript": "^3.8.3",
        "ts-loader": "^7.0.0"
    }
}
